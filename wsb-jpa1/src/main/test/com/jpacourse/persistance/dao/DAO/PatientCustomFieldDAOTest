package test.com.jpacourse.persistance.dao.dao;

import com.jpacourse.model.Patient;
import com.jpacourse.repository.PatientRepository;
import org.junit.jupiter.api.Test;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.autoconfigure.orm.jpa.DataJpaTest;

import java.util.List;

import static org.junit.jupiter.api.Assertions.assertEquals;

@DataJpaTest
public class PatientDaoTest {

    @Autowired
    private PatientRepository patientRepository;

    @Test
    public void testFindPatientsByEarliestVisit() {
        List<Patient> patients = patientRepository.findPatientsByEarliestVisit();
        assertEquals(2, patients.size());
        assertEquals("Wi≈õniewska", patients.get(0).getLastName());
    }
}
